<div class="page-body">
  <div class="showpage-container">
    <div class="content">
      <div class="bbq-image">
        <% if @bbq.photo.attached? %>
          <%= cl_image_tag @bbq.photo.key, height: 430, width: 1000, crop: :auto, alt: "#{@bbq.name} image"%>
        <% else %>
          <%= image_tag "bbq.png", height: 430, width: 1000, crop: :auto, alt: "#{@bbq.name} image"%>
        <% end %>
      </div>

      <div class="details-and-form">
        <div class="bbq-details">
          <h1><%= @bbq.name %></h1>
          <h4><%= @bbq.address %></h4>
          <p><%= @bbq.description %></p>

          <div class="product-details">
            <h3>Details:</h3>
            <div class="product-detail"><p><strong>Brand:</strong></p><p><%= @bbq.brand %></p></div>
            <div class="product-detail"><p><strong>Fuel Type:</strong></p><p><%= @bbq.fuel_type %></p></div>
            <div class="product-detail"><p><strong>Grill Size:</strong></p><p><%= @bbq.grill_size %></p></div>
          </div>

          <div class="map-container">
            <h3>Map:</h3>
            <div style="width: 100%; height: 400px;"
              data-controller="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
          </div>
        </div>

        <div class="booking-form">
          <h3>Book BBQ</h3>
          <div class="booking-item"><p><strong>Price / Day: </strong></p><p><%= "Â£#{@bbq.price}" %></p></div>
          <%# <div class="booking-item"><p><strong>Total Price: </strong></p><p>TBC<p></div> %>
          <%= simple_form_for [@bbq, @booking] do |f| %>
            <%= f.input :start_date,
                    as: :string,
                    input_html: { data: { controller: "datepicker" } },
                    class: "booking-field" %>
            <%= f.input :end_date,
                    as: :string,
                    input_html: { data: { controller: "datepicker" } },
                    class: "booking-field" %>
            <%= f.submit "Book", class: "btn btn-primary booking-button" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>List your BBQ for rental</h3>
        <%= simple_form_for @bbq do |f| %>
          <%= f.input :name, placeholder: "Name" %>
          <%= f.input :description, placeholder: "Description" %>
          <%= f.input :location, placeholder: "Location" %>
          <%= f.input :price, placeholder: "Price" %>
          <%= f.input :brand, prompt: "Please select ...", :collection => ['Weber', 'Traeger', 'Big Green Egg', 'Napoleon', 'Yoder Smokers', 'Beefeaters', 'Other'] %>
          <%= f.input :fuel_type, prompt: "Please select ...", :collection => ['Charcoal', 'Electric', 'Gas']%>
          <%= f.input :grill_size, prompt: "Please select ...", :collection => ["2 people", "4 people", "6 people", "8 people", "10+ people"] %>
          <%= f.input :pick_up, prompt: "Please select ..." %>
          <%= f.input :delivery, prompt: "Please select ..." %>
          <%= f.submit class: "btn btn-flat" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<h1>Available Barbecues</h1>

<% if params[:start_date].present? && params[:end_date].present? %>
  <p>Showing availability from <strong><%= params[:start_date] %></strong> to <strong><%= params[:end_date] %></strong></p>
<% end %>
<div class="container">
  <div class="row g-3">
    <% @bbqs.each do |bbq|  %>
    <div class="col-md-4 col-6">
      <div class="card">
        <%= image_tag "bbq.png", class: 'img-top img-fit', alt: "#{bbq.name} image"%>
        <div class="card-body">
          <h5 class="card-title"> <%= bbq.name %> </h5>
          <p class="card-text"> <%= bbq.description %> </p>
          <p class="card-text"> Â£<%= bbq.price %> </p>
          <div class="text-end">
            <%= link_to "Book Now", bbq_path(id: bbq.id, start_date: params["booking"][:start_date], end_date: params["booking"][:end_date]), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
